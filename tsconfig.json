{
  "compilerOptions": {
    "target": "es6",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "nodenext",                             
    "rootDir": "./src",                               
    "outDir": "dist",                                   
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}

{
  "compilerOptions": {
    "target": "es6",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "node16",                             
    "rootDir": "./src",                               
    "outDir": "dist",                                   
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*"]
}
